#!/bin/bash

set -e  # Exit immediately if a command exits with a non-zero status.

# Color variables for output messages
red='\e[0;31m'
green='\e[0;32m'
yellow='\e[0;33m'
clear='\e[0m'

# Function to check the status of commands
check_command() {
    if ! "$@"; then
        echo -e "${red}âŒ Command failed: $*${clear}"
        exit 1
    fi
}

# Function to run Prettier and check for formatting issues
check_prettier() {
    if ! npx prettier --check .; then
        echo -e "${red}âŒ Prettier formatting issues found. Attempting to fix...${clear}"
        check_command npx prettier --write .
        echo -e "${green}âœ… Prettier formatting fixed!${clear}"
    fi
}

echo -e "${yellow}ğŸ” Running ESLint...${clear}"
check_command npx eslint . --fix

echo -e "${yellow}ğŸ“ Running Prettier...${clear}"
check_prettier

echo -e "${yellow}ğŸ” Running TypeScript checks for client...${clear}"
check_command npx tsc --noEmit -p ./client/tsconfig.json

echo -e "${yellow}ğŸ” Running TypeScript checks for server...${clear}"
check_command npx tsc --noEmit -p ./server/tsconfig.json

echo -e "${yellow}ğŸš« Checking for large files...${clear}"
for file in $(git diff --cached --name-only); do
    if [ $(wc -c < "$file") -gt 1048576 ]; then
        echo -e "${red}âŒ File $file is larger than 1MB. Please remove it from your commit.${clear}"
        exit 1
    fi
done

echo -e "${green}âœ… All checks passed! Ready to commit.${clear}"
