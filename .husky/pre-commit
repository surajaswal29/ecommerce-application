#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Color variables
red='\033[0;31m'
green='\033[0;32m'
cyan='\033[0;36m'
# Clear the color after that
clear='\033[0m'

echo "${cyan}ğŸ” Running lint-staged on staged files...${clear}"
# Run lint-staged for staged files
if npx lint-staged; then
    echo "${green}âœ… lint-staged checks passed!${clear}"
else
    echo "${red}âŒ lint-staged checks failed. Please fix issues before committing.${clear}"
    exit 1
fi
